<h1>List Pengguna</h1>

<table>
  <thead>
    <tr>
      <th>Nama</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Lihat', user %></td>
    <td><%= link_to 'Ubah', edit_user_path(user) %></td>
    <td><%= link_to 'Delete', user, method: :delete,
                                     data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br>

<%= link_to 'Pengguna Baru', new_user_path %>